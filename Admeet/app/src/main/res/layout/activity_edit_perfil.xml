<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:orientation="vertical"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taesua.admeet.admeet.EditarPerfil"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PacoLuanMora"
        android:id="@+id/textViewNombreNick"
        android:layout_column="0"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:gravity="center"
        android:theme="@style/TextoTitulo" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="280dp"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/Tabla"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nombre"
                android:id="@+id/textViewNom"
                android:textSize="15dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:theme="@style/TextoNormalNegrita" />

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextName"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_column="9"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:theme="@style/Widget.AppCompat.Light.AutoCompleteTextView" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ciudad"
                android:id="@+id/textViewCii"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_marginLeft="45dp"
                android:textStyle="bold"
                android:theme="@style/TextoNormalNegrita" />

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextCity"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_column="9"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:theme="@style/Widget.AppCompat.Light.AutoCompleteTextView" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TelÃ©fono"
                android:id="@+id/textView6"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textIsSelectable="true"
                android:layout_marginLeft="45dp"
                android:textStyle="bold"
                android:theme="@style/TextoNormalNegrita" />

            <EditText
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPhone"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_column="9"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:theme="@style/Widget.AppCompat.Light.AutoCompleteTextView" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearlayoutabajo"
        android:layout_marginTop="190dp">

        <Button
            style="@style/Base.Theme.AppCompat.Dialog"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:text="Guardar cambios"
            android:id="@+id/buttonSaveProf"
            android:background="@drawable/roundcornerblue"
            android:textColor="#ffffffff"
            android:layout_alignWithParentIfMissing="false"
            android:textSize="17dp"
            android:layout_column="9"
            android:layout_alignTop="@+id/tableLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="65dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Eventos recientes:"
            android:id="@+id/textViewRecientes"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:textIsSelectable="true"
            android:layout_alignTop="@+id/buttonSaveProf"
            android:layout_alignLeft="@+id/textViewNombreNick"
            android:layout_alignStart="@+id/textViewNombreNick"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:theme="@style/TextoNormalNegrita" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:id="@+id/listViewEv"
            android:layout_below="@+id/textViewRecientes"
            android:layout_alignLeft="@+id/textViewNombreNick"
            android:layout_alignStart="@+id/textViewNombreNick"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:divider="#c8a766dd"
            android:dividerHeight="1dp" />
    </LinearLayout>

</RelativeLayout>

<ListView
android:id="@+id/list_view"
android:layout_width="300dp"
android:layout_height="match_parent"
android:layout_gravity="left"
android:background="#c8a766dd"
android:choiceMode="singleChoice"
android:divider="#33000000"
android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>