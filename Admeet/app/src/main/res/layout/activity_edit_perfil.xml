<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:orientation="vertical"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taesua.admeet.admeet.EditarPerfil"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout"
        android:layout_row="1"
        android:layout_column="9"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <Button
            style="@style/Base.Theme.AppCompat.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Eventos"
            android:id="@+id/buttonAnuncios"
            android:textColor="#ffffffff"
            android:background="#83b5dd"
            android:singleLine="true"
            android:layout_weight="0.37"
            android:textSize="20dp" />

        <Button
            style="@style/Base.Theme.AppCompat.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Perfil"
            android:id="@+id/buttonPerfil"
            android:textColor="#ffffffff"
            android:background="@drawable/bordeazulseleccionado"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:layout_weight="0.25"
            android:textSize="20dp" />

        <Button
            style="@style/Base.Theme.AppCompat.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Publicar"
            android:id="@+id/buttonPublicar"
            android:layout_weight="0.21"
            android:textColor="#ffffffff"
            android:background="#83b5dd"
            android:singleLine="true"
            android:longClickable="false"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PacoLuanMora"
        android:id="@+id/textViewNombreNick"
        android:layout_column="0"
        android:textSize="30dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="220dp"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/Tabla"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nombre"
                android:id="@+id/textViewNom"
                android:textSize="15dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextName"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_column="9"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ciudad"
                android:id="@+id/textView6"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_marginLeft="65dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextCity"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_column="9"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TelÃ©fono"
                android:id="@+id/textView6"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textIsSelectable="true"
                android:layout_marginLeft="65dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPhone"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_column="9"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            style="@style/Base.Theme.AppCompat.Dialog"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:text="Guardar cambios"
            android:id="@+id/buttonSaveProf"
            android:background="@drawable/roundcornerblue"
            android:textColor="#ffffffff"
            android:layout_alignWithParentIfMissing="false"
            android:textSize="17dp"
            android:layout_column="9"
            android:layout_alignTop="@+id/tableLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="280dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Eventos recientes:"
            android:id="@+id/textViewRecientes"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textIsSelectable="true"
            android:layout_alignTop="@+id/buttonSaveProf"
            android:layout_alignLeft="@+id/textViewNombreNick"
            android:layout_alignStart="@+id/textViewNombreNick"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="10dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/listViewEv"
            android:layout_below="@+id/textViewRecientes"
            android:layout_alignLeft="@+id/textViewNombreNick"
            android:layout_alignStart="@+id/textViewNombreNick"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp" />
    </LinearLayout>

</RelativeLayout>