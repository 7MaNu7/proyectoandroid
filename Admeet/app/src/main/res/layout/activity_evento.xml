<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/RelativeLayoutNuevoAd"
    android:background="#ffffffff"
    tools:context="com.taesua.admeet.admeet.Evento">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear1"
    android:layout_marginBottom="520dp"
    android:layout_row="1"
    android:layout_column="9"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="0dp"
    android:layout_alignParentTop="true"
    android:layout_marginTop="0dp" >

    <Button
        style="@style/Base.Theme.AppCompat.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Eventos"
        android:id="@+id/buttonEvento"
        android:textColor="#ffffffff"
        android:background="#ff0fb0ff"
        android:singleLine="true"
        android:layout_weight="0.25"
        android:textSize="20dp" />

    <Button
        style="@style/Base.Theme.AppCompat.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:id="@+id/buttonPerfil"
        android:textColor="#ffffffff"
        android:background="#ff0fb0ff"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:layout_weight="0.25"
        android:textSize="20dp" />

    <Button
        style="@style/Base.Theme.AppCompat.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Publicar"
        android:id="@+id/buttonPublicar"
        android:layout_weight="0.21"
        android:textColor="#ffffffff"
        android:background="#ff0fb0ff"
        android:singleLine="true"
        android:longClickable="false"
        android:textSize="20dp" />
</LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="50dp"
    android:id="@+id/linear2"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Partido de Futbol"
        android:id="@+id/textviewnombre"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp"
        android:typeface="monospace"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabla1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/fila1">

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Lugar:"
                android:id="@+id/textViewTituloLugar"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Almeria, Roquetas de Mar Polideportivo"
                android:id="@+id/textviewlugar"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:textSize="15sp"
                android:layout_column="19"
                android:layout_weight="20" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/fila2">

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fecha:"
                android:id="@+id/textViewTituloFecha"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="15/03/2015"
                android:id="@+id/textviewfecha"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:textSize="15dp"
                android:layout_column="19"
                android:layout_weight="20" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:id="@+id/fila3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Número de personas:"
                android:id="@+id/textViewTituloNPersonas"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3/20"
                android:id="@+id/textViewNPersonas"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:textSize="15dp"
                android:layout_column="19"
                android:layout_weight="20" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tabla2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Categoria:"
                android:id="@+id/textViewTituloCategoria"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Deportes Futbol kkkkkkkkkkkkkkkkkkkkkkkkkk"
                android:id="@+id/textViewcategoria"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:textSize="15dp"
                android:layout_column="19"
                android:layout_weight="20" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Descripción del evento:"
        android:id="@+id/textview2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Partido de Futbol sala con árbitro, comida y bebida gratis al terminar. Hora de inicio: 17.00 Y eso y lo otro y mira que descripción más detallada que pone la gente, bueno, está todo claro ya, bien, así de largo para el ejemplo. Mas ejemplo, mas ejemplo, mas ejemplo."
        android:id="@+id/textviewdescripcion"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:textSize="15dp"
        android:layout_marginLeft="30dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:id="@+id/tabla3">

        <Button
            style="@style/Base.Theme.AppCompat.Dialog"
            android:layout_width="352dp"
            android:layout_height="30dp"
            android:text="Compartir twitter"
            android:id="@+id/buttonCompartir"
            android:textColor="#ffffffff"
            android:background="#ff6fa7ff"
            android:singleLine="true"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp" />

        <Button
            style="@style/Base.Theme.AppCompat.Dialog"
            android:layout_width="179dp"
            android:layout_height="30dp"
            android:text="Apuntarse +"
            android:id="@+id/buttonApuntarse"
            android:textColor="#ffffffff"
            android:background="#ffff5158"
            android:singleLine="true"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/fila31"></TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/fila32">

        </TableRow>
    </TableLayout>

</LinearLayout>
</RelativeLayout>
