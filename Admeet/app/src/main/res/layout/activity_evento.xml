<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/RelativeLayoutNuevoAd"
    android:background="#ffffffff"
    tools:context="com.taesua.admeet.admeet.Evento">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
            android:id="@+id/linear2"
        android:weightSum="1"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <TextView
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Partido de Futbol"
            android:id="@+id/textviewnombre"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:typeface="monospace"
            android:textStyle="bold"
            android:singleLine="false"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tabla1"
            android:layout_marginTop="10dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/fila1">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Lugar:"
                    android:id="@+id/textViewTituloLugar"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Almeria, Roquetas de Mar Polideportivo"
                    android:id="@+id/textviewlugar"
                    android:layout_marginTop="20dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="15sp"
                    android:layout_column="19"
                    android:layout_weight="20" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/fila2">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Fecha:"
                    android:id="@+id/textViewTituloFecha"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="15/03/2015"
                    android:id="@+id/textviewfecha"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="15dp"
                    android:layout_column="19"
                    android:layout_weight="20" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:id="@+id/fila3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Número de personas:"
                    android:id="@+id/textViewTituloNPersonas"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="3/20"
                    android:id="@+id/textViewNPersonas"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="15dp"
                    android:layout_column="19"
                    android:layout_weight="20" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tabla2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Categoria:"
                    android:id="@+id/textViewTituloCategoria"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Deportes Futbol kkkkkkkkkkkkkkkkkkkkkkkkkk"
                    android:id="@+id/textViewcategoria"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="15dp"
                    android:layout_column="19"
                    android:layout_weight="20" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Creador:"
                    android:id="@+id/textView4"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Un creador"
                    android:id="@+id/textViewCreador"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="15dp"
                    android:layout_column="19"
                    android:layout_weight="20" />
            </TableRow>

        </TableLayout>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Descripción del evento:"
            android:id="@+id/textview2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Partido de Futbol sala con árbitro, comida y bebida gratis al terminar. Hora de inicio: 17.00 Y eso y lo otro y mira que descripción más detallada que pone la gente, bueno, está todo claro ya, bien, así de largo para el ejemplo. Mas ejemplo, mas ejemplo, mas ejemplo."
            android:id="@+id/textviewdescripcion"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:singleLine="false"
            android:phoneNumber="false"
            android:password="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Asistentes:"
                android:id="@+id/textView3"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:textSize="15dp"
                android:textStyle="bold" />

            <com.taesua.admeet.admeet.ExpandableHeightListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listViewAsistentes">
                </com.taesua.admeet.admeet.ExpandableHeightListView>
             

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Comentarios:"
                android:id="@+id/textView5"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/tabla3"
            android:baselineAligned="false">

                <Button
                    style="@android:style/Widget.Spinner"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:text="Comentar"
                    android:id="@+id/buttonComentar"
                    android:textColor="#ffffffff"
                    android:background="@drawable/roundcornerblue"
                    android:singleLine="true"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="100dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <Button
                style="@android:style/Widget.Spinner"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:text="Apuntarse +"
                android:id="@+id/buttonApuntarse"
                android:textColor="#ffffffff"
                android:background="@drawable/roundcornerblue"
                android:singleLine="true"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

        </TableLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>

<ListView
    android:id="@+id/list_view"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="#FFFFFF"
    android:choiceMode="singleChoice"
    android:divider="#33000000"
    android:dividerHeight="2dp" />

</android.support.v4.widget.DrawerLayout>