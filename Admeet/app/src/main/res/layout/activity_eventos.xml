<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:weightSum="1"
android:orientation="vertical"
android:background="#ffffffff"

xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.taesua.admeet.admeet.Eventos">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:layout_marginBottom="190dp"
    android:layout_row="1"
    android:layout_column="9"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="0dp"
    android:layout_alignParentTop="true"
    android:layout_marginTop="0dp">

    <Button
        style="@style/Base.Theme.AppCompat.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Eventos"
        android:id="@+id/buttonAnuncios"
        android:textColor="#ffffffff"
        android:background="#ff0fb0ff"
        android:singleLine="true"
        android:layout_weight="0.25"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        style="@style/Base.Theme.AppCompat.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:id="@+id/buttonPerfil"
        android:textColor="#ffffffff"
        android:background="#ff0fb0ff"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:layout_weight="0.25"
        android:textSize="20dp" />

    <Button
        style="@style/Base.Theme.AppCompat.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Filtros"
        android:id="@+id/button"
        android:layout_weight="0.21"
        android:textColor="#ffffffff"
        android:background="#ff0fb0ff"
        android:singleLine="true"
        android:longClickable="false"
        android:textSize="20dp" />
</LinearLayout>

<SearchView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/searchView"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="49dp" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/searchView"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/Linear2"
    android:layout_marginBottom="400dp">

    <Button
        style="@style/Base.Theme.AppCompat.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Todos"
        android:id="@+id/buttontodos"
        android:textColor="#ff0d0d0d"
        android:background="#ff8dd7ff"
        android:singleLine="true"
        android:layout_weight="0.25"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        style="@style/Base.Theme.AppCompat.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÃ­os"
        android:id="@+id/buttonmios"
        android:textColor="#ff0d0d0d"
        android:background="@android:color/background_light"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:layout_weight="0.25"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        style="@style/Base.Theme.AppCompat.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Asisto"
        android:id="@+id/buttonasisto"
        android:layout_weight="0.21"
        android:textColor="#ff0d0d0d"
        android:background="#ff8dd7ff"
        android:singleLine="true"
        android:longClickable="false"
        android:textSize="15dp"
        android:textStyle="bold" />
</LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="540dp"
        android:id="@+id/listviewev"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="130dp"
        android:backgroundTint="#ff0a0a0a" />

</RelativeLayout>
