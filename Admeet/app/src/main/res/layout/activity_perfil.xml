<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#ffffffff"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taesua.admeet.admeet.Perfil">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/linearLayout"
        android:layout_row="1"
        android:layout_column="9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <Button
            style="@style/Base.Theme.AppCompat.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Eventos"
            android:id="@+id/buttonAnuncios"
            android:textColor="#ffffffff"
            android:background="#83b5dd"
            android:singleLine="true"
            android:layout_weight="0.25"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            style="@style/Base.Theme.AppCompat.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Perfil"
            android:id="@+id/buttonPerfil"
            android:textColor="#ffffffff"
            android:background="#83b5dd"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:layout_weight="0.25"
            android:textSize="20dp" />

        <Button
            style="@style/Base.Theme.AppCompat.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Publicar"
            android:id="@+id/buttonPublicar"
            android:layout_weight="0.21"
            android:textColor="#ffffffff"
            android:background="#83b5dd"
            android:singleLine="true"
            android:longClickable="false"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PacoLuanMora"
        android:id="@+id/textViewNombreID"
        android:layout_column="0"
        android:layout_marginLeft="25dp"
        android:textSize="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/tableLayout2">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tabla"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nombre:"
                android:id="@+id/textNombre"
                android:layout_column="0"
                android:layout_marginLeft="25dp"
                android:textSize="20dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textViewNombre"
                android:layout_column="18"
                android:textSize="20dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ciudad:"
                android:id="@+id/textCiudad"
                android:layout_column="0"
                android:layout_marginLeft="55dp"
                android:textSize="20dp"
                android:layout_marginRight="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textViewCiudad"
                android:layout_column="18"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Telefono:"
                android:id="@+id/textTlf"
                android:layout_column="0"
                android:layout_marginLeft="55dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textViewTlf"
                android:layout_column="18"
                android:textSize="20dp" />
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="Editar perfil"
        android:id="@+id/buttonEditarPerfil"
        android:background="@drawable/roundcornerorange"
        android:textColor="#ffffffff"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/tableLayout2"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        style="@style/Base.Theme.AppCompat.Dialog"
        android:layout_alignParentStart="false"
        android:textSize="20dp"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
