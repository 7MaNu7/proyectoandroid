<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textviewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Nombre"
        android:theme="@style/TextoNormal"
        android:textSize="17dp"
        android:textColor="#b7000000" />

    <TextView
        android:id="@+id/textViewComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comentario por doquier Comentario por doquier Comentario por doquier Comentario por doquier Comentario por doquier Comentario por doquier Comentario por doquier omentario por doquier "
        android:layout_below="@+id/textviewNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:theme="@style/TextoNormal"
        android:layout_marginTop="5dp"
        android:textColor="#c8a766dd"
        android:textSize="16dp"
        android:layout_marginLeft="5dp" />

</RelativeLayout>