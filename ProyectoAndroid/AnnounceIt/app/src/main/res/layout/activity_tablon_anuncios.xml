<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TablonAnuncios"
    android:id="@+id/"
    android:background="#BCF5A9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Anuncios"
        android:id="@+id/textViewAnuncios"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_below="@+id/textViewAnuncios"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#FFFFFF" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/searchView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/LinearLayoutAnuncios"
        android:weightSum="1"
        android:background="#FFFFFF"
        android:layout_marginBottom="170dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Anuncio1"
            android:id="@+id/textViewAnuncio2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Esta es la descripción del primer anuncio a modo de prueba. Vamos a jugar al tenis en el patio de mi casa, ¿Quién se apunta? Aforo limitado a 10 personas, comida gratis, un saludo!"
            android:id="@+id/textViewAnuncio1.2"
            android:layout_weight="0.82" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lugar y fecha:"
            android:id="@+id/textViewAnuncio1.3"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Barcelona blablabla 3º 5 05/03/2015 a las 5pm"
            android:id="@+id/textView"
            android:layout_weight="0.07" />

    </LinearLayout>

</RelativeLayout>
